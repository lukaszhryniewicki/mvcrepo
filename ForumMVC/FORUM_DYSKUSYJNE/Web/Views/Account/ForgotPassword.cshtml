
@{
	ViewBag.Title = "ForgotPassword";
}


<div class=" col-lg-offset-4 img2 ">
	<img src="~/Web/Content/images/hotslogo.png" />
	<h2 style="padding-bottom:20px;">
		Enter Your Account Email
	</h2>
	<h4>Which account are you having problems accessing?</h4>
</div>

<div class="col-lg-7 col-lg-offset-4 text-danger" >

	@if (@ViewBag.Message != null)
	{
		@ViewBag.Message
		<p></p>
	}
</div>
@Html.ValidationMessage("TimeError", new { @class = "text-danger" })
@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal  col-md-offset-3 ">

		@Html.ValidationSummary(true, "", new { @class = "text-danger" })




		<div class="form-group">
			<div style="padding-left:54px;margin-left:20px;">
				@Html.TextBox("email", "", new { placeholder = "Email Address", @class = "login-fields form-control long-field", })

			</div>



		</div>



		<div class="form-group">
			<div class=" col-md-5" style="margin-left:60px;">
				<input type="submit" value="Send email" class="btn btn-primary" style="width:270px; max-width:none" />
			</div>
			<div class=" col-md-3 " style="margin-left:-47px;">
				@Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "btn btn-primary forgot-button" })

			</div>
		</div>





	</div>
}

