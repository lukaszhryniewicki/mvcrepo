@model FORUM_DYSKUSYJNE.Web.ViewModels.LoginView

@{
	ViewBag.Title = "Login";
}
<head>
	<link rel="stylesheet" href="~/Content/MainPage.css">
</head>
<div class=" col-lg-offset-4 img2" 	>
	<img src="~/Content/images/hotslogo.png"  />
</div>

@using (Html.BeginForm(null, null, new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
{
	@Html.AntiForgeryToken()


<div class="form-horizontal container">

	@Html.ValidationSummary(true, "", new { @class = "text-danger" })
	<div class="form-group">
		@Html.ValidationMessage("User not in database", new { @class = "text-danger",style="margin-left:40%" })
		<p></p>

		<div class="col-md-6 " style="margin-left:35.5%;" >
			@Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control login-fields", placeholder = "Username" } })
			@Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
		</div>
	</div>

	<div class="form-group">
		<div class="col-md-6" style="margin-left:35.5%;">
			@Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control login-fields", placeholder = "Password" } })
			@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
		</div>
	</div>

	<div class="form-group">
		<div class=" col-md-6 " style="margin-left:35.5%;">
			<input type="submit" value="Log In to Hots" style="width:300px;" class="btn btn-primary " />
		</div>
	</div>
	<div class="form-group">
		@Html.LabelFor(model => model.RememberMe, htmlAttributes: new { @class = "control-label col-lg-offset-3 move-label", style="margin-left:220px;" })
		<div class="col-md-3">
			<div class="checkbox login-checkbox" style="margin-left:-73px">
				@Html.EditorFor(model => model.RememberMe)
				@Html.ValidationMessageFor(model => model.RememberMe, "", new { @class = "text-danger" })
			</div>
		</div>
	</div>
	<div class="container">
		<div style="margin-left:35%;">
			@Html.ActionLink("Create a new account", "Registration", "Account", new { @class = "login-buttons" })
		</div>
		<div style="margin-left:35%;">
			@Html.ActionLink("Forgot Password", "ForgotPassword", "Account", new { @class = "login-buttons" })
		</div>
	</div>




</div>
}


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

